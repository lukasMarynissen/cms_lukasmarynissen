<div class="activity-bar">
    <div class="activity-bar-title">
        <p>periode van {{ period.starttime |date("d/m/Y") }} tot {{ period.endtime |date("d/m/Y") }}</p>
    </div>
    <div class="activity-bar-content">
        <div>
            <p class="text-light">status</p>
            {%  if period.confirmed %}
                <div class="badge badge-success"><p>Bevestigd</p></div>
            {% elseif period.published  %}
                <div class="badge badge-warning"><p>Te Bevestigen</p></div>
            {% else %}
                <div class="badge badge-danger"><p>Niet gepubliceerd</p></div>
            {% endif %}
        </div>
        <div>
            <a href="{{ path('customer-period-detail', {'id': period.id}) }}"><button type="button" class="customer-detail-button">Details</button></a>
        </div>
    </div>
</div>