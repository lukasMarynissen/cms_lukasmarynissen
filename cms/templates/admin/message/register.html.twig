{% extends 'base.html.twig' %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}



{% block title %}Nieuwe bericht versturen{% endblock %}

{% block body %}
<link href="{{ asset('styles/main.css') }}" rel="stylesheet">

<div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
    {% include 'partials/adminHeader.html.twig' %}
    <div class="app-main">
        {% include 'partials/adminSidebar.html.twig' %}
        <div class="app-main__outer">
            <div class="app-main__inner">
                <div class="app-page-title">
                    <div class="page-title-wrapper">
                        <div class="page-title-heading">
                            <div class="page-title-icon">
                                <i class="fas fa-user-edit">
                                </i>
                            </div>
                            <div>Nieuw bericht versturen
                                <div class="page-title-subheading">Hier kan u een nieuw bericht versturen
                            </div>
                        </div>
                    </div>
                </div>

                <div class="main-card mb-3 card">
                    <div class="card-body">
                        {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
                        <div class="errors">
                            {{ form_errors(form) }}
                        </div>

                        <div class="position-relative form-group hidden">
                            {{ form_label(form.recipient, "Ontvanger") }}
                            {{ form_widget(form.recipient) }}
                        </div>

                        <div class="position-relative form-group hidden">
                            {{ form_label(form.sender, "Ontvanger") }}
                            {{ form_widget(form.sender) }}
                        </div>

                        <div class="position-relative form-group hidden">
                            {{ form_label(form.created_at, "Ontvanger") }}
                            {{ form_widget(form.created_at) }}
                        </div>

                        <div class="position-relative form-group hidden">
                            {{ form_label(form.sender_type, "Ontvanger") }}
                            {{ form_widget(form.sender_type) }}
                        </div>

                        <div class="position-relative form-group hidden">
                            {{ form_label(form.related_period, "Ontvanger") }}
                            {{ form_widget(form.related_period) }}
                        </div>

                        <div class="position-relative form-group">
                            {{ form_label(form.content, "Reactie") }}
                            {{ form_widget(form.content) }}
                        </div>

                        {{ form_row(form.save, { 'label': 'bericht versturen' }) }}
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="{{ asset('scripts/architect.js') }}"></script>
{% endblock %}
